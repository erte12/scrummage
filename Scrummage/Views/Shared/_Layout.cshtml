@using Scrummage.Controllers
@using Scrummage.Core
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Scrummage App</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Scrummage", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    
                    @if (User.IsInRole(RoleName.ScrumMaster))
                    {
                        <li>@Html.ActionLink("Manage teams", "Index", "Teams")</li>
                    }

@*                    Nav button example*@
@*                    <li>                *@
@*                        <p class="navbar-btn">*@
@*                            <a href="#" class="btn btn-primary">I'm a link button!</a>*@
@*                        </p>*@
@*                    </li>*@

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Your teams <span class="caret"></span></a>
                        <ul class="dropdown-menu" id="scrumBoardNavigation"></ul>
                    </li>
@*                    <li class="dropdown">*@
@*                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Events <span class="caret"></span></a>*@
@*                        <ul class="dropdown-menu" id="eventNavigation"></ul>*@
@*                    </li>*@
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
    
<div class="container-fluid">
    @RenderSection("fullWidth", required: false)
</div>

<div class="container body-content">
    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>
</div>

@Scripts.Render("~/bundles/lib")
    
<script>
    $.get('/api/Teams', function (data) {
        data.forEach(function (team) {
            var scrumBoardMenuElement = createMenuElement('/Sprints?teamId=' + team.id, team.name);
            scrumBoardMenuElement.appendTo('#scrumBoardNavigation');

//            var eventMenuElement = createMenuElement('/Events?teamId=' + team.id, team.name);
//            eventMenuElement.appendTo('#eventNavigation');
        });
    });

    function createMenuElement(destination, text) {
        var menuElement = $('<li><a></a></li>');
        menuElement.find('a')
            .attr('href', destination)
            .text(text);

        return menuElement;
    }

</script>   

@RenderSection("scripts", required: false)
</body>
</html>
